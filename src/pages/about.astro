---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/ui/Button.astro';
import SectionHeader from '../components/ui/SectionHeader.astro';
import { useTranslations } from '../i18n/ui';

const t = useTranslations('en');

const values = [
  {
    title: "Technical Excellence",
    description: "We invest in the best equipment and constantly push the boundaries of what's possible in corporate production.",
    icon: "camera"
  },
  {
    title: "Visual Narrative",
    description: "Every project tells a story. We don't just capture footage — we craft narratives that connect with audiences.",
    icon: "film"
  },
  {
    title: "Reliability",
    description: "15 years of on-time, on-budget delivery. Our clients trust us with their most important projects.",
    icon: "check"
  },
  {
    title: "Innovation",
    description: "From 3D virtual tours to AI-enhanced workflows — we're always exploring what's next in visual production.",
    icon: "spark"
  }
];

const equipment = {
  cameras: ["RED Komodo 6K", "ARRI Alexa Mini", "Sony FX6", "Blackmagic URSA 12K", "Sony A7S III"],
  drones: ["DJI Inspire 3", "DJI Mavic 3 Pro", "DJI Mini 4 Pro"],
  audio: ["Sennheiser MKH Series", "Rode NTG5", "Shure SM7B", "Neumann U87"],
  lighting: ["ARRI SkyPanel", "Aputure 600d Pro", "Nanlite Forza", "Astera Titan Tubes"],
  software: ["DaVinci Resolve Studio", "Adobe Premiere Pro", "After Effects", "Cinema 4D", "Matterport"]
};
---

<Layout title="About" description="Learn about Tecnovisuales - 15 years of international audiovisual experience bringing cinematic quality to corporate production in Santiago, Chile.">
  <Nav />

  <main>
    <!-- Hero Section -->
    <section class="relative min-h-[60vh] flex items-center justify-center overflow-hidden pt-24">
      <div class="absolute inset-0 bg-brand-black">
        <div class="absolute inset-0 bg-gradient-to-br from-brand-black via-brand-black-light to-brand-black opacity-90"></div>
        <div class="film-grain"></div>
      </div>

      <div class="container relative z-10 text-center py-20">
        <div class="max-w-4xl mx-auto">
          <span class="inline-block text-brand-gold text-sm font-medium uppercase tracking-[0.2em] mb-6 reveal-on-scroll">
            Our Story
          </span>

          <h1 class="font-display text-4xl md:text-6xl lg:text-7xl font-medium text-brand-cream mb-8 leading-tight reveal-on-scroll">
            {t('about.title')}
          </h1>

          <p class="text-lg md:text-xl text-brand-gray-light max-w-2xl mx-auto font-light reveal-on-scroll">
            {t('about.subtitle')}
          </p>
        </div>
      </div>
    </section>

    <!-- Story Section -->
    <section class="section bg-brand-black">
      <div class="container">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          <div class="reveal-on-scroll">
            <span class="text-brand-gold text-sm font-medium uppercase tracking-[0.2em] mb-4 block">
              {t('about.story.title')}
            </span>
            <h2 class="font-display text-3xl md:text-4xl text-brand-cream mb-8 leading-tight">
              From International Productions to Santiago's Corporate Scene
            </h2>
            <div class="space-y-6 text-brand-gray-light font-light leading-relaxed">
              <p>{t('about.story.content')}</p>
              <p>
                Our approach is simple: treat every corporate project with the same care, creativity, and technical excellence that defines the best film and television productions. Whether it's a brand documentary, a podcast series, or a live corporate event, we bring cinematic thinking to everything we create.
              </p>
              <p>
                Today, we serve some of Chile's most innovative companies, from Fortune 500 corporations to ambitious startups, helping them communicate with impact through the power of visual storytelling.
              </p>
            </div>
          </div>

          <!-- Stats Column -->
          <div class="grid grid-cols-2 gap-8 reveal-on-scroll">
            <div class="text-center p-8 bg-brand-black-light border border-brand-gray-dark/20">
              <span class="block font-display text-5xl md:text-6xl text-brand-gold mb-2">15+</span>
              <span class="text-brand-gray-light text-sm uppercase tracking-widest">Years Experience</span>
            </div>
            <div class="text-center p-8 bg-brand-black-light border border-brand-gray-dark/20">
              <span class="block font-display text-5xl md:text-6xl text-brand-gold mb-2">200+</span>
              <span class="text-brand-gray-light text-sm uppercase tracking-widest">Projects</span>
            </div>
            <div class="text-center p-8 bg-brand-black-light border border-brand-gray-dark/20">
              <span class="block font-display text-5xl md:text-6xl text-brand-gold mb-2">8</span>
              <span class="text-brand-gray-light text-sm uppercase tracking-widest">Countries</span>
            </div>
            <div class="text-center p-8 bg-brand-black-light border border-brand-gray-dark/20">
              <span class="block font-display text-5xl md:text-6xl text-brand-gold mb-2">50+</span>
              <span class="text-brand-gray-light text-sm uppercase tracking-widest">Happy Clients</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Values Section -->
    <section class="section bg-brand-black-light border-y border-brand-gray-dark/20">
      <div class="container">
        <SectionHeader
          title="Our Values"
          subtitle="What Drives Us"
          align="center"
          class="max-w-3xl"
        />

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {values.map((value, index) => (
            <div class="text-center reveal-on-scroll group">
              <div class="w-16 h-16 mx-auto mb-6 border border-brand-gold flex items-center justify-center group-hover:bg-brand-gold/10 transition-colors">
                {value.icon === 'camera' && (
                  <svg class="w-8 h-8 text-brand-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                  </svg>
                )}
                {value.icon === 'film' && (
                  <svg class="w-8 h-8 text-brand-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />
                  </svg>
                )}
                {value.icon === 'check' && (
                  <svg class="w-8 h-8 text-brand-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                )}
                {value.icon === 'spark' && (
                  <svg class="w-8 h-8 text-brand-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                )}
              </div>
              <h3 class="font-display text-xl text-brand-cream mb-3">{value.title}</h3>
              <p class="text-brand-gray font-light text-sm leading-relaxed">{value.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Equipment Section -->
    <section class="section bg-brand-black">
      <div class="container">
        <SectionHeader
          title="Our Technology"
          subtitle="Equipment & Software"
          align="center"
          class="max-w-3xl"
        />

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl mx-auto">
          <div class="reveal-on-scroll">
            <h3 class="font-display text-xl text-brand-cream mb-4 flex items-center gap-3">
              <span class="w-8 h-8 flex items-center justify-center border border-brand-gold text-brand-gold text-sm">01</span>
              Cameras
            </h3>
            <ul class="space-y-2">
              {equipment.cameras.map(item => (
                <li class="text-brand-gray font-light text-sm pl-11">{item}</li>
              ))}
            </ul>
          </div>

          <div class="reveal-on-scroll">
            <h3 class="font-display text-xl text-brand-cream mb-4 flex items-center gap-3">
              <span class="w-8 h-8 flex items-center justify-center border border-brand-gold text-brand-gold text-sm">02</span>
              Drones
            </h3>
            <ul class="space-y-2">
              {equipment.drones.map(item => (
                <li class="text-brand-gray font-light text-sm pl-11">{item}</li>
              ))}
            </ul>
          </div>

          <div class="reveal-on-scroll">
            <h3 class="font-display text-xl text-brand-cream mb-4 flex items-center gap-3">
              <span class="w-8 h-8 flex items-center justify-center border border-brand-gold text-brand-gold text-sm">03</span>
              Audio
            </h3>
            <ul class="space-y-2">
              {equipment.audio.map(item => (
                <li class="text-brand-gray font-light text-sm pl-11">{item}</li>
              ))}
            </ul>
          </div>

          <div class="reveal-on-scroll">
            <h3 class="font-display text-xl text-brand-cream mb-4 flex items-center gap-3">
              <span class="w-8 h-8 flex items-center justify-center border border-brand-gold text-brand-gold text-sm">04</span>
              Lighting
            </h3>
            <ul class="space-y-2">
              {equipment.lighting.map(item => (
                <li class="text-brand-gray font-light text-sm pl-11">{item}</li>
              ))}
            </ul>
          </div>

          <div class="reveal-on-scroll">
            <h3 class="font-display text-xl text-brand-cream mb-4 flex items-center gap-3">
              <span class="w-8 h-8 flex items-center justify-center border border-brand-gold text-brand-gold text-sm">05</span>
              Software
            </h3>
            <ul class="space-y-2">
              {equipment.software.map(item => (
                <li class="text-brand-gray font-light text-sm pl-11">{item}</li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section bg-brand-black-light text-center border-t border-brand-gray-dark/20">
      <div class="container">
        <div class="max-w-3xl mx-auto">
          <SectionHeader
            title="Ready to Work Together?"
            subtitle="Let's Connect"
            align="center"
          />
          <p class="text-xl text-brand-gray-light font-light mb-12">
            We'd love to hear about your project and show you how we can bring cinematic quality to your vision.
          </p>
          <Button href="/contact" variant="primary">
            Get in Touch
          </Button>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<script>
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
      }
    });
  }, { threshold: 0.1 });

  document.querySelectorAll('.reveal-on-scroll').forEach((el) => {
    observer.observe(el);
  });
</script>
