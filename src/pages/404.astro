---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/ui/Button.astro';
---

<Layout title="Page Not Found">
  <Nav />

  <main class="min-h-screen flex items-center justify-center bg-brand-black">
    <div class="container text-center py-20">
      <span class="block font-display text-[12rem] md:text-[20rem] text-brand-gold/10 leading-none select-none">
        404
      </span>

      <div class="-mt-20 md:-mt-32 relative z-10">
        <h1 class="font-display text-4xl md:text-5xl text-brand-cream mb-6">
          Page Not Found
        </h1>

        <p class="text-brand-gray-light text-lg mb-12 max-w-md mx-auto">
          The page you're looking for doesn't exist or has been moved.
        </p>

        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <Button href="/" variant="primary">
            Go Home
          </Button>
          <Button href="/contact" variant="outline">
            Contact Us
          </Button>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>
