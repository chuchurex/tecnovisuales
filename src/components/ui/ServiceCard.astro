---
interface Props {
  number: string;
  title: string;
  tagline: string;
  href: string;
}

const { number, title, tagline, href } = Astro.props;
---

<a href={href} class="group relative block bg-brand-black-light border border-brand-gray-dark/20 p-8 md:p-12 hover:border-brand-gold/30 transition-all duration-500 overflow-hidden h-full flex flex-col justify-between">
  <div>
    <span class="block font-display text-6xl text-brand-gray-dark/20 group-hover:text-brand-gold/20 transition-colors duration-500 mb-8 leading-none">
      {number}
    </span>
    <h3 class="font-display text-2xl md:text-3xl text-brand-cream mb-3 group-hover:text-brand-gold transition-colors leading-tight">
      {title}
    </h3>
    <p class="font-body text-brand-gray font-light leading-relaxed mb-8">
      {tagline}
    </p>
  </div>
  
  <span class="inline-flex items-center text-brand-gold text-xs uppercase tracking-widest opacity-0 transform translate-y-4 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-300">
    Explore 
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 256 256" fill="currentColor" class="ml-2">
      <path d="M181.66,133.66l-80,80a8,8,0,0,1-11.32-11.32L164.69,128,90.34,53.66a8,8,0,0,1,11.32-11.32l80,80A8,8,0,0,1,181.66,133.66Z"></path>
    </svg>
  </span>
</a>
