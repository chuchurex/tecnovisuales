---
import '../styles/global.css';
import { getLangFromUrl } from '../i18n/ui';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = 'Premium cinematographic production company based in Santiago, Chile. Corporate films, podcasts, events, streaming, and 3D real estate.', image = '/og-image.jpg' } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang={lang} class="film-grain">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- SEO -->
    <title>{title} | Tecnovisuales</title>
    <meta name="description" content={description} />
    <meta name="author" content="Tecnovisuales" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | Tecnovisuales`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    <meta property="og:locale" content={lang === 'es' ? 'es_CL' : 'en_US'} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | Tecnovisuales`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.site)} />

    <!-- Alternate Languages -->
    <link rel="alternate" hreflang="en" href={new URL(Astro.url.pathname.replace(/^\/es/, ''), Astro.site)} />
    <link rel="alternate" hreflang="es" href={new URL(`/es${Astro.url.pathname.replace(/^\/es/, '')}`, Astro.site)} />
    <link rel="alternate" hreflang="x-default" href={new URL(Astro.url.pathname.replace(/^\/es/, ''), Astro.site)} />

    <!-- Theme Color -->
    <meta name="theme-color" content="#0A0A0A" />

    <!-- Generator -->
    <meta name="generator" content={Astro.generator} />
  </head>
  <body class="bg-[--color-brand-black] text-[--color-brand-cream] overflow-x-hidden">
    <slot />
  </body>
</html>
