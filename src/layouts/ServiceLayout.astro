---
import Layout from './Layout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/ui/Button.astro';
import SectionHeader from '../components/ui/SectionHeader.astro';

interface Feature {
  title: string;
  description: string;
}

interface ProcessStep {
  number: string;
  title: string;
  description: string;
}

interface FAQ {
  question: string;
  answer: string;
}

interface Props {
  title: string;
  tagline: string;
  description: string;
  heroSubtitle: string;
  features: Feature[];
  process: ProcessStep[];
  equipment?: string[];
  faqs: FAQ[];
  lang?: 'en' | 'es';
}

const {
  title,
  tagline,
  description,
  heroSubtitle,
  features,
  process,
  equipment = [],
  faqs,
  lang = 'en'
} = Astro.props;

const contactHref = lang === 'es' ? '/es/contact' : '/contact';
const ctaTitle = lang === 'es' ? 'Comienza Tu Proyecto' : 'Start Your Project';
const ctaSubtitle = lang === 'es'
  ? 'Cuéntanos tu visión y hagamos realidad tu proyecto.'
  : 'Tell us about your vision and let\'s bring your project to life.';
const ctaButton = lang === 'es' ? 'Contáctanos' : 'Get in Touch';
const featuresTitle = lang === 'es' ? 'Lo Que Ofrecemos' : 'What We Offer';
const processTitle = lang === 'es' ? 'Nuestro Proceso' : 'Our Process';
const equipmentTitle = lang === 'es' ? 'Tecnología y Equipamiento' : 'Technology & Equipment';
const faqTitle = lang === 'es' ? 'Preguntas Frecuentes' : 'Frequently Asked Questions';
---

<Layout title={title} description={description}>
  <Nav />

  <main>
    <!-- Hero Section -->
    <section class="relative min-h-[70vh] flex items-center justify-center overflow-hidden pt-24">
      <div class="absolute inset-0 bg-brand-black">
        <div class="absolute inset-0 bg-gradient-to-br from-brand-black via-brand-black-light to-brand-black opacity-90"></div>
        <div class="film-grain"></div>
      </div>

      <div class="container relative z-10 text-center py-20">
        <div class="max-w-4xl mx-auto">
          <span class="inline-block text-brand-gold text-sm font-medium uppercase tracking-[0.2em] mb-6 reveal-on-scroll">
            {tagline}
          </span>

          <h1 class="font-display text-4xl md:text-6xl lg:text-7xl font-medium text-brand-cream mb-8 leading-tight reveal-on-scroll">
            {title}
          </h1>

          <p class="text-lg md:text-xl text-brand-gray-light max-w-2xl mx-auto mb-12 font-light reveal-on-scroll">
            {heroSubtitle}
          </p>

          <Button href={contactHref} variant="primary" class="reveal-on-scroll">
            {ctaButton}
          </Button>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="section bg-brand-black-light">
      <div class="container">
        <SectionHeader
          title={featuresTitle}
          subtitle={title}
          align="center"
          class="max-w-3xl"
        />

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
          {features.map((feature, index) => (
            <div class="group p-8 bg-brand-black border border-brand-gray-dark/20 hover:border-brand-gold/30 transition-all duration-500 reveal-on-scroll">
              <div class="flex items-start gap-4">
                <span class="flex-shrink-0 w-10 h-10 flex items-center justify-center border border-brand-gold text-brand-gold font-display text-lg">
                  {String(index + 1).padStart(2, '0')}
                </span>
                <div>
                  <h3 class="font-display text-xl text-brand-cream mb-3 group-hover:text-brand-gold transition-colors">
                    {feature.title}
                  </h3>
                  <p class="text-brand-gray font-light leading-relaxed">
                    {feature.description}
                  </p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Process Section -->
    <section class="section bg-brand-black">
      <div class="container">
        <SectionHeader
          title={processTitle}
          subtitle={lang === 'es' ? 'Cómo Trabajamos' : 'How We Work'}
          align="center"
        />

        <div class="relative mt-16">
          <!-- Connection Line (Desktop) -->
          <div class="hidden lg:block absolute top-[3rem] left-0 right-0 h-px bg-gradient-to-r from-transparent via-brand-gray-dark/50 to-transparent"></div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-{process.length} gap-8 lg:gap-6">
            {process.map((step) => (
              <div class="relative text-center group reveal-on-scroll">
                <div class="w-24 h-24 mx-auto bg-brand-black border border-brand-gold text-brand-gold rounded-full flex items-center justify-center font-display text-3xl mb-8 relative z-10 transition-all duration-500 group-hover:scale-110 group-hover:shadow-[0_0_40px_rgba(200,164,85,0.2)]">
                  {step.number}
                </div>
                <h3 class="font-display text-2xl text-brand-cream mb-4">{step.title}</h3>
                <p class="text-brand-gray font-light leading-relaxed max-w-sm mx-auto">{step.description}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Equipment Section (if provided) -->
    {equipment.length > 0 && (
      <section class="section bg-brand-black-light border-y border-brand-gray-dark/20">
        <div class="container">
          <SectionHeader
            title={equipmentTitle}
            subtitle={lang === 'es' ? 'Nuestra Tecnología' : 'Our Tech'}
            align="center"
          />

          <div class="flex flex-wrap justify-center gap-4 max-w-4xl mx-auto">
            {equipment.map((item) => (
              <span class="px-6 py-3 bg-brand-black border border-brand-gray-dark/30 text-brand-gray-light text-sm font-light hover:border-brand-gold/50 hover:text-brand-cream transition-all duration-300">
                {item}
              </span>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- FAQ Section -->
    <section class="section bg-brand-black">
      <div class="container">
        <SectionHeader
          title={faqTitle}
          subtitle="FAQ"
          align="center"
        />

        <div class="max-w-3xl mx-auto space-y-4">
          {faqs.map((faq, index) => (
            <details class="group bg-brand-black-light border border-brand-gray-dark/20 hover:border-brand-gold/30 transition-colors reveal-on-scroll">
              <summary class="flex items-center justify-between p-6 cursor-pointer list-none">
                <h3 class="font-display text-lg text-brand-cream group-hover:text-brand-gold transition-colors pr-4">
                  {faq.question}
                </h3>
                <svg class="w-5 h-5 text-brand-gold transition-transform duration-300 group-open:rotate-180 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </summary>
              <div class="px-6 pb-6 pt-0">
                <p class="text-brand-gray font-light leading-relaxed">{faq.answer}</p>
              </div>
            </details>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section bg-brand-black-light text-center">
      <div class="container">
        <div class="max-w-3xl mx-auto">
          <SectionHeader
            title={ctaTitle}
            subtitle={title}
            align="center"
          />
          <p class="text-xl text-brand-gray-light font-light mb-12">
            {ctaSubtitle}
          </p>
          <Button href={contactHref} variant="primary">
            {ctaButton}
          </Button>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<script>
  // Simple scroll reveal
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
      }
    });
  }, { threshold: 0.1 });

  document.querySelectorAll('.reveal-on-scroll').forEach((el) => {
    observer.observe(el);
  });
</script>
